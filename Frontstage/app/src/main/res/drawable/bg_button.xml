<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Corner的属性是设置圆角的半径的-->
    <corners
        android:radius="10dp"
         />

    <!-- Button里面的文字与Button边界的间隔
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" /-->

    <!-- Button内部颜色-->

    <solid android:color="#11B7F6" />

</shape>
