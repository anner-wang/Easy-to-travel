<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DriverActivity"
    android:background="#9b9797"
    >
    <com.amap.api.maps.MapView
        android:id="@+id/driver_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.amap.api.maps.MapView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/btn_bg_2"
        android:padding="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <Button
            android:id="@+id/passenger_btn_info"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_style_userinfo"
            android:layout_centerVertical="true"
            />
        <android.support.v7.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/passenger_btn_info"
            >
        </android.support.v7.widget.SearchView>
    </RelativeLayout>



    <Button
        android:id="@+id/passenger_btn_start"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_style_1"
        android:text="寻找打车点"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_bg_3"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:padding="3dp"
        >
        <Button
            android:id="@+id/passenger_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_my_location"
            />
    </LinearLayout>

</RelativeLayout>