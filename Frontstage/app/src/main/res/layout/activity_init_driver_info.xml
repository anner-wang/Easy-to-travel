<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_blur">

    <ImageView
        android:id="@+id/driver_infor_logo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:src="@drawable/pic_taxieasy"
        />

    <RelativeLayout
        android:id="@+id/driver_infor_text1"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/driver_infor_logo"
        android:layout_marginTop="50dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="姓名"
            android:textSize="22dp"
            android:textColor="#1F2429"
            android:layout_alignParentLeft="true"/>
        <EditText
            android:background="@drawable/edit_bg"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:id="@+id/driver_infor_name"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/driver_infor_text2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/driver_infor_text1"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="年龄"
            android:textSize="22dp"
            android:textColor="#1F2429"
            android:layout_alignParentLeft="true" />
        <EditText
            android:background="@drawable/edit_bg"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:digits="0123456789"
            android:id="@+id/driver_infor_age"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/driver_infor_text3"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/driver_infor_text2"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="车牌号"
            android:textSize="22dp"
            android:textColor="#1F2429"
            android:layout_alignParentLeft="true"/>
        <EditText
            android:background="@drawable/edit_bg"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:id="@+id/driver_infor_carLience"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/driver_infor_text4"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/driver_infor_text3"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="车型"
            android:textSize="22dp"
            android:textColor="#1F2429"
            android:layout_alignParentLeft="true"/>
        <EditText

            android:background="@drawable/edit_bg"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:id="@+id/driver_infor_carType"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/driver_infor_confirm"
        android:layout_below="@id/driver_infor_text4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:radius="20dp"
        android:background="@drawable/bt_shape_green"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:gravity="center"
        android:text="确认信息"/>
</RelativeLayout>
